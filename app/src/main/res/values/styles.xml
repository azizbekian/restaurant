<resources>

    <!-- All ProgressBars in the application must extend from this style,
    so that later changes could be easily populated to all ProgressBars in the app.
    -->
    <style name="QuandooTest.Widget.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">?android:colorAccent</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <!-- If this ProgressBar desires to change some property, it can do here easily,
    not affecting other ProgressBars across the app -->
    <style name="ProgressBar" parent="QuandooTest.Widget.ProgressBar"/>

</resources>
